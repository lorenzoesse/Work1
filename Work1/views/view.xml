<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Tree view -->
        <record model="ir.ui.view" id="book_tree_view">
            <field name="name">book.tree</field>
            <field name="model">book</field>
            <field name="arch" type="xml">
                <tree string="Book Tree">
                    <field name="bookName"/>
                    <field name="publishYear"/>
                    <field name="isbnCode"/>
                    <field name="loaner"/>
                </tree>
           </field>
        </record>

        <!-- Form view -->
        <record model="ir.ui.view" id="book_form_view">
            <field name="name">book.form</field>
            <field name="model">book</field>
            <field name="arch" type="xml">
                <form string="Book Form">
                    <group>
                        <field name="bookName" text="Book Title: " string="Book Title: "/>
                        <field name="publishYear" string="Year of publish: "/>
                        <field name="isbnCode" string="ISBN Code: "/>
                        <field name="loaner" string="On loan to: "/>
                    </group>
                </form>
           </field>
        </record>

        <!-- Action window -->
        <record id="book_action" model="ir.actions.act_window">
            <field name="name">Books List</field>
            <field name="res_model">book</field>
            <field name="view_type">form</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Action Menu Item Related To Above Action Window -->
        <!--<menuitem action="book_action" id="action_menu_123" parent="write_the_parent_menu_id" name="Readable Text" sequence="1"/>
-->
        <menuitem action="book_action" id="work1_page" name="Work1 Page" parent="base.menu_custom"/>
    </data>
</odoo>